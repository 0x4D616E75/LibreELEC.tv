#!/bin/sh

. config/options

$SCRIPTS/build toolchain
$SCRIPTS/build eina
$SCRIPTS/build eet
$SCRIPTS/build evas
$SCRIPTS/build ecore
$SCRIPTS/build edje
$SCRIPTS/build efreet
$SCRIPTS/build libiconv

export LDFLAGS="$LDFLAGS -liconv"

cd $PKG_BUILD
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix=/usr \
            --disable-static \
            --enable-shared \
            --with-edje-cc=/bin/true

make

$MAKEINSTALL -C src
cp elementary.pc $SYSROOT_PREFIX/usr/lib/pkgconfig