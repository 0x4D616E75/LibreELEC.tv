#!/bin/sh

. config/options

$SCRIPTS/install eina
$SCRIPTS/install eet
$SCRIPTS/install evas
$SCRIPTS/install ecore
$SCRIPTS/install edje
$SCRIPTS/install efreet
$SCRIPTS/install libiconv
$SCRIPTS/install elementary-theme

mkdir -p $INSTALL/usr/lib
  cp -PR $PKG_BUILD/src/lib/.libs/libelementary*.so* $INSTALL/usr/lib

if [ "$DEVTOOLS" = yes ]; then
  mkdir -p $INSTALL/usr/bin
    cp -PR $PKG_BUILD/src/bin/.libs/elementary_quicklaunch $INSTALL/usr/bin
    cp -PR $PKG_BUILD/src/bin/elementary_run $INSTALL/usr/bin
    cp -PR $PKG_BUILD/src/bin/.libs/elementary_test $INSTALL/usr/bin
    cp -PR $PKG_BUILD/src/bin/.libs/elementary_testql $INSTALL/usr/bin
  mkdir -p $INSTALL/usr/lib
    cp -PR $PKG_BUILD/src/bin/.libs/elementary_testql.so $INSTALL/usr/lib
fi