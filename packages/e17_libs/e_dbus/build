#!/bin/sh

. config/options

$SCRIPTS/build toolchain
$SCRIPTS/build eina
$SCRIPTS/build evas
$SCRIPTS/build ecore
$SCRIPTS/build dbus
$SCRIPTS/build hal
# there is an error $SCRIPTS/build connman

cd $PKG_BUILD
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix=/usr \
            --disable-static \
            --enable-shared \
            --enable-ehal \
            --disable-enm \
            --disable-econnman \
            --enable-enotify \

make

$MAKEINSTALL
