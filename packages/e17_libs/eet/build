#!/bin/sh

. config/options

$SCRIPTS/build toolchain
$SCRIPTS/build eina
$SCRIPTS/build openssl
$SCRIPTS/build jpeg

cd $PKG_BUILD
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix=/usr \
            --disable-static \
            --enable-shared \
            --disable-doc \

make

$MAKEINSTALL