#!/bin/sh

. config/options

$SCRIPTS/build toolchain

cd $PKG_BUILD
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix=/usr \
            --disable-static \
            --enable-shared \
            --enable-pthread \
            --enable-chained-pool \
            --enable-pass-through \
            --enable-default-mempool \
            --disable-doc\

make

$MAKEINSTALL
