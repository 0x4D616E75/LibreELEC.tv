#!/bin/sh

. config/options

$SCRIPTS/build toolchain
$SCRIPTS/build ecore
$SCRIPTS/build embryo
$SCRIPTS/build lua

cd $PKG_BUILD
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix=/usr \
            --disable-static \
            --enable-shared \
            --disable-doc \
            --enable-edje-cc \

make

$MAKEINSTALL
