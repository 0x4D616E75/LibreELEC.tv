#!/bin/sh

. config/options

$SCRIPTS/build toolchain
$SCRIPTS/build glib
$SCRIPTS/build dbus
$SCRIPTS/build dbus-glib

cd $PKG_BUILD
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix=/usr \
            --sysconfdir=/etc \
            --datadir=/usr/share \
            --localstatedir=/var \
            --disable-static \
            --enable-shared \

setup_toolchain host
make -C src/eggdbus eggdbus-binding-tool

$MAKEINSTALL