#!/bin/sh

. config/options

$SCRIPTS/build toolchain

cd $PKG_BUILD/gettext-runtime
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix=/usr \
            --with-included-gettext \
            --disable-static \
            --enable-shared \
            --disable-dependency-tracking \
            --disable-java \
            --disable-native-java \
            --disable-libasprintf

make

$MAKEINSTALL
