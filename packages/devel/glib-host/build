#!/bin/sh

. config/options

$SCRIPTS/build toolchain
$SCRIPTS/unpack glib

setup_toolchain host

cd $BUILD/glib*

mkdir -p .build-host

cd .build-host
../configure --prefix=$ROOT/$TOOLCHAIN \
            --disable-shared \
            --enable-static \
            --with-libiconv=no \
            --enable-debug=no \
            --disable-man \
            --disable-rebuilds \
            --disable-gtk-doc \

make
#
make install
#
cp -f gobject/glib-genmarshal $ROOT/$TOOLCHAIN/bin
cp -f gobject/glib-mkenums $ROOT/$TOOLCHAIN/bin
