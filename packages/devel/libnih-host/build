#!/bin/sh

. config/options

$SCRIPTS/build toolchain
$SCRIPTS/build dbus-host
$SCRIPTS/unpack libnih

setup_toolchain host

cd $BUILD/libnih*

mkdir -p objdir-host
cd objdir-host

../configure --enable-static \
             --disable-shared

make

mkdir -p $ROOT/$TOOLCHAIN/bin
  cp -f nih-dbus-tool/nih-dbus-tool $ROOT/$TOOLCHAIN/bin
