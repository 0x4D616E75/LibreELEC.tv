#!/bin/sh

. config/options

$SCRIPTS/build toolchain
$SCRIPTS/build dbus
$SCRIPTS/build libnih-host

export NIH_DBUS_TOOL="$ROOT/$TOOLCHAIN/bin/nih-dbus-tool"

cd $BUILD/$1*

mkdir -p objdir-target
cd objdir-target

../configure --host=$TARGET_NAME \
             --build=$HOST_NAME \
             --prefix=/usr \
             --enable-static \
             --disable-shared \
             --disable-nls \
             --enable-threading

make

$MAKEINSTALL
