#!/bin/sh

. config/options

$SCRIPTS/build toolchain

cd $BUILD/$1*
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix=/usr \
            --sysconfdir=/etc \
            --enable-static \
            --disable-shared \
            --disable-glib \

$MAKE

#$STRIP liboil/.libs/liboil-*.so*

$MAKEINSTALL
