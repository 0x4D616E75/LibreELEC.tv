#!/bin/sh

. config/options

$SCRIPTS/build toolchain
$SCRIPTS/build eggdbus-host
$SCRIPTS/build glib
$SCRIPTS/build dbus
$SCRIPTS/build dbus-glib

cd $PKG_BUILD
mkdir -p .build-target

cd .build-target
../configure --host=$TARGET_NAME \
             --build=$HOST_NAME \
             --prefix=/usr \
             --sysconfdir=/etc \
             --datadir=/usr/share \
             --localstatedir=/var \
             --disable-static \
             --enable-shared \
             --with-eggdbus-binding-tool=$ROOT/$TOOLCHAIN/bin/eggdbus-binding-tool \
             --with-eggdbus-glib-genmarshal=$ROOT/$TOOLCHAIN/bin/eggdbus-glib-genmarshal \

make

$MAKEINSTALL