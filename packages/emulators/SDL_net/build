#!/bin/sh

. config/options

$SCRIPTS/build toolchain
$SCRIPTS/build SDL

cd $PKG_BUILD
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix=/usr \
            --sysconfdir=/etc \
            --localstatedir=/var \
            --enable-shared \
            --disable-static \

make

$STRIP .libs/*.so*

$MAKEINSTALL
