#!/bin/sh

. config/options

$SCRIPTS/install SDL
$SCRIPTS/install zlib
$SCRIPTS/install libpng
$SCRIPTS/install $MESA

mkdir -p $INSTALL/etc/zsnes

mkdir -p $INSTALL/usr/bin
cp $PKG_BUILD/src/zsnesd $INSTALL/usr/bin

