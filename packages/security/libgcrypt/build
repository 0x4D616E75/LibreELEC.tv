#!/bin/sh

. config/options

$SCRIPTS/build toolchain
$SCRIPTS/build libgpg-error

cd $PKG_BUILD
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix=/usr \
            --sysconfdir=/etc \
            --localstatedir=/var \
            --enable-static \
            --disable-shared \
            --disable-asm \
            --enable-digests="md5 rmd160 sha1 sha256 sha512" \
            --enable-ciphers="arcfour des aes" \
            --enable-pubkey-ciphers="rsa dsa" \


make

$MAKEINSTALL

$SED "s:\(['= ]\)/usr:\\1$SYSROOT_PREFIX/usr:g" \
  $SYSROOT_PREFIX/usr/bin/libgcrypt-config

mv $SYSROOT_PREFIX/usr/bin/libgcrypt-config $ROOT/$TOOLCHAIN/bin

