#!/bin/sh

. config/options $1

cd $PKG_BUILD
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix=/usr \
            --sysconfdir=/etc \
            --localstatedir=/var \
            --disable-static \
            --enable-shared \
            --disable-asm \
            --with-gnu-ld

make
$MAKEINSTALL

sed -e "s:\(['= ]\)/usr:\\1$SYSROOT_PREFIX/usr:g" -i src/libgcrypt-config

cp src/libgcrypt-config $ROOT/$TOOLCHAIN/bin
