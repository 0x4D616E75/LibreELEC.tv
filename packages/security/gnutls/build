#!/bin/sh

. config/options

$SCRIPTS/build toolchain
$SCRIPTS/build libtasn1
$SCRIPTS/build libgcrypt

cd $PKG_BUILD
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix=/usr \
            --sysconfdir=/etc \
            --localstatedir=/var \
            --enable-static \
            --disable-shared \

make

#$STRIP src/.libs/*.so*

$MAKEINSTALL
