#!/bin/sh

. config/options $1

cd $PKG_BUILD
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix=/usr \
            --sysconfdir=/etc \
            --datadir=/usr/share \
            --libexecdir=/usr/lib/polkit-1 \
            --localstatedir=/var \
            --disable-static \
            --enable-shared \
            --disable-man-pages \
            --disable-gtk-doc \
            --disable-nls \
            --disable-introspection \
            --with-authfw=shadow \
            --with-os-type=redhat \

make

$MAKEINSTALL
