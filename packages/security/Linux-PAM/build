#!/bin/sh

. config/options

$SCRIPTS/build toolchain
$SCRIPTS/build flex

cd $PKG_BUILD
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix=/usr \
            --libdir=/usr/lib \
            --sysconfdir=/etc \
            --sbindir=/lib/security \
            --datadir=/usr/share \
            --localstatedir=/var \
            --disable-static \
            --enable-shared \
            --enable-read-both-confs \
            --disable-cracklib \
            --disable-audit \
            --enable-db=no \
            --disable-regenerate-docu \

make

$MAKEINSTALL
