#!/bin/sh

. config/options

$SCRIPTS/build toolchain

cd $BUILD/$1*
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix=/usr \
            --sysconfdir=/etc \
            --localstatedir=/var \
            --enable-static \
            --disable-shared \

make

#$STRIP src/.libs/*.so*

make DESTDIR=$SYSROOT_PREFIX install

$SED "s:\(['= ]\)/usr:\\1$SYSROOT_PREFIX/usr:g" \
  $SYSROOT_PREFIX/usr/bin/gpg-error-config

mv $SYSROOT_PREFIX/usr/bin/gpg-error-config $ROOT/$TOOLCHAIN/bin

