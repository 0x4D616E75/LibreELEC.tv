#!/bin/sh

. config/options $1

$SCRIPTS/build toolchain
$SCRIPTS/build zlib

cd $PKG_BUILD

./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix=/usr \
            --sysconfdir=/etc \
            --localstatedir=/var \
            --disable-static \
            --enable-shared \
            --disable-shadow \

make
make scp
