#!/bin/sh

. config/options

PLUGIN_DIR=`pkg-config libproxy-1.0 --define-variable=prefix=/usr --variable=plugindir`

mkdir -p $INSTALL/usr/bin
cp -PR $PKG_BUILD/src/bin/.libs/proxy $INSTALL/usr/bin

mkdir -p $INSTALL/usr/lib
cp -PR $PKG_BUILD/src/lib/.libs/*.so* $INSTALL/usr/lib

mkdir -p $INSTALL/$PLUGIN_DIR
cp -PR $PKG_BUILD/src/plugins/.libs/*.so $INSTALL/$PLUGIN_DIR
