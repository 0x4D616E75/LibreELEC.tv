#!/bin/sh

. config/options

$SCRIPTS/build toolchain

cd $PKG_BUILD
ac_cv_func_malloc_0_nonnull=yes \
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix=/usr \
            --sysconfdir=/etc \
            --localstatedir=/var \
            --disable-static \
            --enable-shared \

make

$STRIP src/bin/.libs/proxy
$STRIP src/lib/.libs/*.so*
$STRIP src/plugins/.libs/*.so*

$MAKEINSTALL
