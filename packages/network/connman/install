#!/bin/sh

. config/options

$SCRIPTS/install hal
$SCRIPTS/install dbus
$SCRIPTS/install udev
$SCRIPTS/install bluez
$SCRIPTS/install wpa_supplicant

PKG_DIR=`find $PACKAGES -type d -name $1`

mkdir -p $INSTALL/usr/sbin
cp -PR $BUILD/$1*/src/connmand $INSTALL/usr/sbin

mkdir -p $INSTALL/usr/lib/connman/plugins
cp -PR $BUILD/$1*/plugins/.libs/*.so $INSTALL/usr/lib/connman/plugins

mkdir -p $INSTALL/usr/lib/connman/scripts
cp -PR $BUILD/$1*/scripts/udhcpc-script $INSTALL/usr/lib/connman/scripts

mkdir -p $INSTALL/etc/dbus-1/system.d
cp -PR $BUILD/$1*/src/connman.conf $INSTALL/etc/dbus-1/system.d

mkdir -p $INSTALL/etc/udev/rules.d
cp -PR $BUILD/$1*/src/92-connman.rules $INSTALL/etc/udev/rules.d

cp -PR $PKG_DIR/config/*.conf $INSTALL/etc
