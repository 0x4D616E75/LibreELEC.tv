#!/bin/sh

. config/options $1

cd $PKG_BUILD
ac_cv_path_WPASUPPLICANT="/usr/sbin/wpa_supplicant" \
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix=/usr \
            --sysconfdir=/etc \
            --localstatedir=/var \
            --disable-static \
            --enable-shared \
            --disable-gtk-doc \
            --disable-debug \
            --enable-threads \
            --enable-loopback=builtin \
            --enable-ethernet=builtin \
            --enable-wifi=builtin \
            --disable-bluetooth \
            --disable-hh2serial-gps \
            --disable-ofono \
            --disable-dhclient \
            --disable-openconnect \
            --disable-pacrunner \
            --enable-dnsproxy=builtin \
            --enable-google=builtin \
            --enable-meego=builtin \
            --enable-portal=builtin \
            --disable-iwmx \
            --disable-iospm \
            --enable-ntpd=builtin \
            --disable-polkit \
            --enable-client \
            --disable-tools \
            --disable-test \
            --disable-fake \
            --disable-capng \
            --enable-udev \
            --enable-datafiles \
            --disable-silent-rules \

make
