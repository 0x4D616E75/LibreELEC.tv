#!/bin/sh

. config/options

$SCRIPTS/build toolchain
$SCRIPTS/build libproxy
#$SCRIPTS/build gnutls

cd $BUILD/$1*

./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix=/usr \
            --sysconfdir=/etc \
            --localstatedir=/var \
            --disable-static \
            --enable-shared \
            --without-gnome \
            --disable-ssl \

make

$STRIP $1/.libs/*.so*

$MAKEINSTALL
