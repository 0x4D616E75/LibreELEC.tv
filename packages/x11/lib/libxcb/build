#!/bin/sh

. config/options

$SCRIPTS/build toolchain
$SCRIPTS/build xcb-proto
$SCRIPTS/build libpthread-stubs
$SCRIPTS/build libXau

cd $PKG_BUILD
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix=/usr \
            --sysconfdir=/etc \
            --localstatedir=/var \
            --disable-static \
            --enable-shared \

make

$MAKEINSTALL
