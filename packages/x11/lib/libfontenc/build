#!/bin/sh

. config/options

$SCRIPTS/build toolchain
$SCRIPTS/build xproto
$SCRIPTS/build zlib

cd $BUILD/$1*
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix=/usr \
            --sysconfdir=/etc \
            --enable-static \
            --disable-shared \

$MAKE

#$STRIP src/.libs/libfontenc.so*

$MAKEINSTALL