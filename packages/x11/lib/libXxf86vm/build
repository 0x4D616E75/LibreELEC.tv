#!/bin/sh

. config/options

$SCRIPTS/build toolchain
$SCRIPTS/build xf86vidmodeproto
$SCRIPTS/build libX11
$SCRIPTS/build libXext

cd $BUILD/$1*
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix=/usr \
            --sysconfdir=/etc \
            --localstatedir=/var \
            --disable-static \
            --enable-shared \
            --enable-malloc0returnsnull

$MAKE

$STRIP src/.libs/libXxf86vm.so*

$MAKEINSTALL