#!/bin/sh

. config/options

$SCRIPTS/build toolchain
$SCRIPTS/build fixesproto
$SCRIPTS/build libX11

cd $BUILD/$1*
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix=/usr \
            --sysconfdir=/etc \
            --localstatedir=/var \
            --disable-static \
            --enable-shared \

$MAKE

$STRIP src/.libs/libXfixes.so*

$MAKEINSTALL
