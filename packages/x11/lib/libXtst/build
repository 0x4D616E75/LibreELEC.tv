#!/bin/sh

. config/options $1

$SCRIPTS/build toolchain
$SCRIPTS/build recordproto
$SCRIPTS/build xextproto
$SCRIPTS/build inputproto
$SCRIPTS/build libX11
$SCRIPTS/build libXext
$SCRIPTS/build libXi

cd $PKG_BUILD
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix=/usr \
            --sysconfdir=/etc \
            --localstatedir=/var \
            --disable-static \
            --enable-shared \
            --with-gnu-ld \

make

$MAKEINSTALL
