#!/bin/sh

. config/options

$SCRIPTS/build toolchain
$SCRIPTS/build libX11

cd $PKG_BUILD
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix=/usr \
            --sysconfdir=/etc \
            --localstatedir=/var \
            --disable-static \
            --enable-shared \
            --with-gnu-ld \
            --enable-malloc0returnsnull \

make -C util CC=$HOST_CC CFLAGS=$HOST_CFLAGS makestrs
make

$STRIP src/.libs/*.so*

$MAKEINSTALL
