#!/bin/sh

. config/options $1

$SCRIPTS/build toolchain
$SCRIPTS/build fontconfig
$SCRIPTS/build freetype
$SCRIPTS/build xproto
$SCRIPTS/build libXrender

cd $PKG_BUILD
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix=/usr \
            --enable-shared \
            --disable-static \
            --sysconfdir=/etc \
            --localstatedir=/var \

make

$MAKEINSTALL
