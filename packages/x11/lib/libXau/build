#!/bin/sh

. config/options

$SCRIPTS/build toolchain
$SCRIPTS/build xproto

cd $BUILD/$1*
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix=/usr \
            --sysconfdir=/etc \
            --localstatedir=/var \
            --disable-static \
            --enable-shared \
            --enable-xthreads \

make

$STRIP .libs/libXau.so*

$MAKEINSTALL
