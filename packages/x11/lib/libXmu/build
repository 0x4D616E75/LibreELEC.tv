#!/bin/sh

. config/options

$SCRIPTS/build toolchain
$SCRIPTS/build xextproto
$SCRIPTS/build libX11
$SCRIPTS/build libXext
$SCRIPTS/build libXt

cd $BUILD/$1*
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix=/usr \
            --sysconfdir=/etc \
            --localstatedir=/var \
            --disable-static \
            --enable-shared \
            --with-gnu-ld \
            --enable-malloc0returnsnull \

make

$STRIP src/.libs/*.so*

$MAKEINSTALL
