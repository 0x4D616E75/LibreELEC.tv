#!/bin/sh

. config/options

$SCRIPTS/build toolchain
$SCRIPTS/build libICE

cd $PKG_BUILD
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix=/usr \
            --localstatedir=/var \
            --sysconfdir=/etc \
            --enable-static \
            --disable-shared \
            --disable-IPv6 \
            --without-libuuid \

make

$MAKEINSTALL
