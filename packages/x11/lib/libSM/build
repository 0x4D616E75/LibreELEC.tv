#!/bin/sh

. config/options

$SCRIPTS/build toolchain
$SCRIPTS/build libICE

cd $BUILD/$1*
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix=/usr \
            --localstatedir=/var \
            --sysconfdir=/etc \
            --enable-static \
            --disable-shared \
            --disable-IPv6 \
            --without-libuuid \
#            --enable-unix-transport \
#            --disable-tcp-transport \
#            --disable-local-transport \

make

#$STRIP src/.libs/*.so*

$MAKEINSTALL
