#!/bin/sh

. config/options $1

$SCRIPTS/build toolchain
$SCRIPTS/build util-linux-ng
$SCRIPTS/build libICE

cd $PKG_BUILD
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix=/usr \
            --localstatedir=/var \
            --sysconfdir=/etc \
            --disable-static \
            --enable-shared \
            --with-libuuid \
            --without-xmlto \
            --without-fop \

make

$MAKEINSTALL
