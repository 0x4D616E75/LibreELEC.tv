#!/bin/sh

. config/options

$SCRIPTS/build toolchain
$SCRIPTS/build compositeproto
$SCRIPTS/build fixesproto
$SCRIPTS/build libXfixes
$SCRIPTS/build libXext
$SCRIPTS/build libX11

cd $PKG_BUILD
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix=/usr \
            --sysconfdir=/etc \
            --localstatedir=/var \
            --disable-static \
            --enable-shared \
#            --enable-malloc0returnsnull

$MAKE

$MAKEINSTALL
