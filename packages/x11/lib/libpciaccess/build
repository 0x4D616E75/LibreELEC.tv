#!/bin/sh

. config/options

$SCRIPTS/build toolchain
$SCRIPTS/build zlib

export ac_cv_header_asm_mtrr_h=set

cd $PKG_BUILD
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix=/usr \
            --sysconfdir=/etc \
            --disable-static \
            --enable-shared \
            --with-pciids-path=/usr/share \
            --with-zlib \

make

$STRIP src/.libs/libpciaccess.so*

$MAKEINSTALL
