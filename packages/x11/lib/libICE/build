#!/bin/sh

. config/options

$SCRIPTS/build toolchain
$SCRIPTS/build xtrans

cd $PKG_BUILD
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix=/usr \
            --sysconfdir=/etc \
            --localstatedir=/var \
            --enable-static \
            --disable-shared \
            --enable-ipv6 \
#            --enable-unix-transport \
#            --disable-tcp-transport \
#            --disable-local-transport \

make

$MAKEINSTALL
