#!/bin/sh

. config/options

$SCRIPTS/build toolchain
$SCRIPTS/build videoproto
$SCRIPTS/build libX11
$SCRIPTS/build libXext

cd $PKG_BUILD
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix=/usr \
            --sysconfdir=/etc \
            --localstatedir=/var \
            --disable-static \
            --enable-shared \
            --enable-malloc0returnsnull

$MAKE

$STRIP src/.libs/libXv.so*

$MAKEINSTALL