#!/bin/sh

. config/options

$SCRIPTS/build toolchain

cd $PKG_BUILD

xorg_drv_configure_prepend

./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix=/usr \
            --sysconfdir=/etc \
            --enable-shared \
            --disable-static \
            --enable-dri \
            --enable-exa \
            --with-xorg-module-dir=$XORG_PATH_MODULES

make
