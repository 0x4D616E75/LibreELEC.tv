#!/bin/sh

. config/options

$SCRIPTS/install libXi

mkdir -p $INSTALL/$XORG_PATH_MODULES/input
cp $BUILD/$1*/src/.libs/synaptics_drv.so $INSTALL/$XORG_PATH_MODULES/input

mkdir -p $INSTALL/usr/share/hal/fdi/policy/20thirdparty/
cp $BUILD/$1*/fdi/*.fdi $INSTALL/usr/share/hal/fdi/policy/20thirdparty/
