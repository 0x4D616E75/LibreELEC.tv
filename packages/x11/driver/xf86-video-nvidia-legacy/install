#!/bin/sh

. config/options $1

$SCRIPTS/build busybox-hosttools

VER=`ls $BUILD/linux*/modules/lib/modules`

mkdir -p $INSTALL/$XORG_PATH_MODULES/drivers
  cp -P $PKG_BUILD/usr/X11R6/lib/modules/drivers/*_drv.so $INSTALL/$XORG_PATH_MODULES/drivers

mkdir -p $INSTALL/$XORG_PATH_MODULES/extensions
  cp -P $PKG_BUILD/usr/X11R6/lib/modules/extensions/libglx.so* $INSTALL/$XORG_PATH_MODULES/extensions/libglx_nvidia.so

mkdir -p $INSTALL/etc/X11
  cp -P $PKG_DIR/config/*.conf $INSTALL/etc/X11

mkdir -p $INSTALL/usr/lib
  cp -P $PKG_BUILD/usr/lib/libGLcore.so* $INSTALL/usr/lib/libGLcore.so.1
  cp -P $PKG_BUILD/usr/lib/libGL.so* $INSTALL/usr/lib/libGL_nvidia.so.1
  cp -P $PKG_BUILD/usr/lib/tls/*tls*.so* $INSTALL/usr/lib/libnvidia-tls.so.1

mkdir -p $INSTALL/lib/modules/$VER/nvidia
  cp -P $PKG_BUILD/usr/src/nv/nvidia.ko $INSTALL/lib/modules/$VER/nvidia

  for MOD in `find $INSTALL/lib/modules/$VER/nvidia -name *.ko`; do
    $STRIP --strip-debug $MOD
  done

  $ROOT/$TOOLCHAIN/sbin/depmod -b $INSTALL $VER > /dev/null
  for i in `ls $INSTALL/lib/modules/*/modules.* | grep -v modules.dep | grep -v modules.alias | grep -v modules.symbols`; do
    rm -f $i
  done
