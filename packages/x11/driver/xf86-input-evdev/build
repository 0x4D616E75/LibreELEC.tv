#!/bin/sh

. config/options

$SCRIPTS/build toolchain

cd $PKG_BUILD
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix=/usr \
            --sysconfdir=/etc \
            --disable-static \
            --enable-shared \
            --with-xorg-module-dir=$XORG_PATH_MODULES

make

echo $STRIP src/.libs/evdev_drv.so
$STRIP src/.libs/evdev_drv.so
