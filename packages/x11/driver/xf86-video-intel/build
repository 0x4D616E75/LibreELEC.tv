#!/bin/sh

. config/options

$SCRIPTS/build toolchain

BUILD_DIR=`ls -d $PKG_BUILD`

CFLAGS="$CFLAGS -I$BUILD_DIR/src/xvmc"

cd $PKG_BUILD
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix=/usr \
            --sysconfdir=/etc \
            --enable-shared \
            --disable-static \
            --enable-dri \
            --with-xorg-module-dir=$XORG_PATH_MODULES

make
