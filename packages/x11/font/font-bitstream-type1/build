#!/bin/sh

. config/options

$SCRIPTS/build toolchain

cd $BUILD/$1*
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix=/usr \
            --sysconfdir=/etc \
            --localstatedir=/var \
            --disable-static \
            --enable-shared \
            --with-fontdir=$XORG_PATH_FONTS

$MAKE

mkdir -p fonts
cp *.afm fonts
cp *.pfb fonts
cd fonts
mkfontdir
