#!/bin/sh

. config/options

$SCRIPTS/build toolchain
$SCRIPTS/build font-util

cd $PKG_BUILD
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix=/usr \
            --sysconfdir=/etc \
            --localstatedir=/var \
            --disable-static \
            --enable-shared \
            --with-fontdir=$XORG_PATH_FONTS

$MAKE UTIL_DIR="`ls -d $ROOT/$BUILD/font-util*`"
