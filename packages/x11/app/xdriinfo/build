#!/bin/sh

. config/options

$SCRIPTS/build toolchain
$SCRIPTS/build libX11
$SCRIPTS/build $LIBDRM
$SCRIPTS/build $MESA

cd $BUILD/$1*
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix=/usr \
            --sysconfdir=/etc \
            --disable-static \
            --enable-shared \

make

$STRIP $1
