#!/bin/sh

. config/options

$SCRIPTS/build toolchain
$SCRIPTS/build libXrandr

export CFLAGS="$CFLAGS -O2"

cd $PKG_BUILD
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix=/usr \
            --sysconfdir=/etc \
            --disable-static \
            --enable-shared \

make

$STRIP $1