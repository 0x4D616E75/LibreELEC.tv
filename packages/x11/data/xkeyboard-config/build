#!/bin/sh

. config/options $1

$SCRIPTS/build toolchain
$SCRIPTS/build xkbcomp

cd $PKG_BUILD
XKBCOMP="/usr/bin/xkbcomp" \
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix=/usr \
            --sysconfdir=/etc \
            --enable-compat-rules \
            --with-xkb-base=$XORG_PATH_XKB \
            --with-xkb-rules-symlink=xorg

make

make DESTDIR=`pwd`/.install install
