#!/bin/sh

. config/options

$SCRIPTS/build toolchain

cd $BUILD/$1*
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix=/usr \
            --sysconfdir=/etc \
            --disable-static \
            --enable-shared \

make

$MAKEINSTALL

#$SED "s:\(['= ]\)/usr:\\1$SYSROOT_PREFIX/usr:g" \
#  $SYSROOT_PREFIX/usr/lib/pkgconfig/xcb-proto.pc
