#!/bin/sh

. config/options

$SCRIPTS/build toolchain
$SCRIPTS/build glib
$SCRIPTS/build cairo
$SCRIPTS/build freetype
$SCRIPTS/build fontconfig
$SCRIPTS/build libX11
$SCRIPTS/build libXft

cd $PKG_BUILD

./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix=/usr \
            --sysconfdir=/etc \
            --disable-static \
            --enable-shared \
            --disable-doc-cross-references \
            --enable-debug=no

make

$MAKEINSTALL
