#!/bin/sh

. config/options

$SCRIPTS/build toolchain
$SCRIPTS/build libX11
$SCRIPTS/build libXft

cd $PKG_BUILD
autoreconf
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix=/usr \
            --sysconfdir=/etc \
            --disable-static \
            --enable-shared \
            --disable-debug \
            --disable-history \
            --with-xterm=rxvt \
            --with-xft \
            --with-x

make

