#!/bin/sh

. config/options

$SCRIPTS/build toolchain
$SCRIPTS/build libX11
$SCRIPTS/build glib
$SCRIPTS/build pango
$SCRIPTS/build libxml2

cd $BUILD/$1*
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix=/usr \
            --sysconfdir=/etc \
            --disable-static \
            --enable-shared \
            --disable-startup-notification \
            --disable-xcursor \
            --disable-session-management

make

$STRIP src/$1
