<?xml version="1.0" encoding="UTF-8"?>
<openbox_config xmlns="http://openbox.org/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://openbox.org/                 file:///var/tmp/openbox-3.2-root/usr/share/openbox/rc.xsd">

<theme>
  <name>Clearlooks</name>
  <titlelayout>NLIMC</titlelayout>
</theme>


<keyboard>
 <chainQuitKey>C-g</chainQuitKey>

  <keybind key="A-F4">
    <action name="Close"/>
  </keybind>
  <keybind key="C-q">
    <action name="Close"/>
  </keybind>
  <keybind key="A-Tab">
    <action name="NextWindow"/>
  </keybind>
  <keybind key="C-A-t">
    <action name="Execute">
      <execute>mrxvt</execute>
    </action>
  </keybind>
  <keybind key="C-A-e">
    <action name="Execute">
      <execute>eject</execute>
    </action>
  </keybind>
  <keybind key="C-A-r">
    <action name="Execute">
      <execute>reboot</execute>
    </action>
  </keybind>
  <keybind key="C-A-s">
    <action name="Execute">
      <execute>screenshot</execute>
    </action>
  </keybind>
</keyboard> 

</openbox_config>

