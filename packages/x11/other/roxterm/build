#!/bin/sh

. config/options

$SCRIPTS/build toolchain
$SCRIPTS/build libX11
$SCRIPTS/build vte
$SCRIPTS/build libglade
$SCRIPTS/build dbus-glib

cd $PKG_BUILD
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix=/usr \
            --sysconfdir=/etc \
            --disable-static \
            --enable-shared \

make

$STRIP src/$1
