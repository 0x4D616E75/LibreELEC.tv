#!/bin/sh

. config/options $1

$SCRIPTS/build toolchain
$SCRIPTS/build $LIBJPEG
$SCRIPTS/build zlib

cd $PKG_BUILD
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix=/usr \
            --sysconfdir=/etc \
            --disable-static \
            --enable-shared \
            --disable-mdi \
            --disable-cxx \
            --with-jpeg-lib-dir=$SYSROOT_PREFIX/usr/lib \
            --with-jpeg-include-dir=$SYSROOT_PREFIX/usr/include \
            --without-x

make

$MAKEINSTALL