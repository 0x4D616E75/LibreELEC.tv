#!/bin/sh

. config/options $1

cd $PKG_BUILD
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix=/usr \
            --sysconfdir=/etc \
            --localstatedir=/var \
            --disable-static \
            --enable-shared \
            --enable-png \
            --enable-ps \
            --enable-pdf \
            --enable-svg \
            --enable-xlib \
            --disable-xcb \
            --disable-gl \
            --disable-drm \
            --disable-gtk-doc \

make
$MAKEINSTALL
