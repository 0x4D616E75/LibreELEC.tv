$SCRIPTS/install libXrender
$SCRIPTS/install libX11
#$SCRIPTS/install libxcb

mkdir -p $INSTALL/usr/lib
  cp -P $PKG_BUILD/src/.libs/libcairo.so* $INSTALL/usr/lib
