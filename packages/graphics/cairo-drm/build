#!/bin/sh

. config/options

$SCRIPTS/build toolchain
$SCRIPTS/build zlib
$SCRIPTS/build freetype
$SCRIPTS/build fontconfig
$SCRIPTS/build libpng
$SCRIPTS/build libdrm
$SCRIPTS/build $MESA
$SCRIPTS/build eagle
$SCRIPTS/build pixman
$SCRIPTS/build libXrender
$SCRIPTS/build libX11


cd $PKG_BUILD

./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix=/usr \
            --sysconfdir=/etc \
            --localstatedir=/var \
            --disable-static \
            --enable-shared \
            --enable-png=yes \
            --enable-svg=yes \
            --enable-xcb=no \
            --enable-interpreter=no \
            --enable-script=no \
            --enable-trace=no \
            --enable-drm=yes \
            --enable-eagle=auto \
            --disable-shave \
#            --enable-gallium=yes \
#            --enable-gl=yes \


make

$MAKEINSTALL
