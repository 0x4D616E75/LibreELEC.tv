#!/bin/sh

. config/options

$SCRIPTS/build toolchain
$SCRIPTS/build zlib

cd $BUILD/$1*
ac_cv_lib_z_zlibVersion=yes \
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix=/usr \
            --sysconfdir=/etc \
            --disable-static \
            --enable-shared \

$MAKE

$STRIP .libs/libpng12.so*

$MAKEINSTALL

$SED "s:\(['= ]\)/usr:\\1$SYSROOT_PREFIX/usr:g" \
  $SYSROOT_PREFIX/usr/bin/libpng12-config

mv $SYSROOT_PREFIX/usr/bin/libpng*-config $ROOT/$TOOLCHAIN/bin
