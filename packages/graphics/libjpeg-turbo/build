#!/bin/sh

. config/options $1

$SCRIPTS/build toolchain

# ensure we dont use size optimization.
  CFLAGS=`echo $CFLAGS | sed -e "s|-Os|-O3|"`
  CXXFLAGS=`echo $CXXFLAGS | sed -e "s|-Os|-O3|"`

cd $PKG_BUILD

$AUTORECONF

./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix=/usr \
            --sysconfdir=/etc \
            --localstatedir=/var \
            --disable-static \
            --enable-shared \

make

$MAKEINSTALL
