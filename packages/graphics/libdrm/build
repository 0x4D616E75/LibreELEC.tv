#!/bin/sh

. config/options

$SCRIPTS/build toolchain
$SCRIPTS/build libpthread-stubs
$SCRIPTS/build udev
#$SCRIPTS/build linux

cd $BUILD/$1*
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix=/usr \
            --sysconfdir=/etc \
            --disable-static \
            --enable-shared \
            --enable-udev \
            --enable-largefile \

$MAKE

$STRIP libdrm/.libs/libdrm.so*
$STRIP libdrm/intel/.libs/libdrm_intel.so*

$MAKEINSTALL
