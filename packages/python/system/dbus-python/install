#!/bin/sh

. config/options

$SCRIPTS/install Python
$SCRIPTS/install dbus

PYTHON_LIB_DIR=`ls -d $INSTALL/usr/lib/python*`

mkdir -p $PYTHON_LIB_DIR/site-packages
  cp -PR $PKG_BUILD/_dbus_bindings/.libs/*.so $PYTHON_LIB_DIR/site-packages
  cp -PR $PKG_BUILD/_dbus_glib_bindings/.libs/*.so $PYTHON_LIB_DIR/site-packages
  cp -PR $PKG_BUILD/*.pyc  $PYTHON_LIB_DIR/site-packages

mkdir -p $PYTHON_LIB_DIR/site-packages/dbus
  cp -PR $PKG_BUILD/dbus/*.pyc $PYTHON_LIB_DIR/site-packages/dbus

mkdir -p $PYTHON_LIB_DIR/site-packages/dbus/mainloop
  cp -PR $PKG_BUILD/dbus/mainloop/*.pyc $PYTHON_LIB_DIR/site-packages/dbus/mainloop
