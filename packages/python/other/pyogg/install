#!/bin/sh

. config/options

$SCRIPTS/install Python
$SCRIPTS/install libogg

PYTHON_LIB_DIR=`ls -d $INSTALL/usr/lib/python*`

mkdir -p $PYTHON_LIB_DIR/site-packages/ogg
cp $PKG_BUILD/build/lib*/*/*.so $PYTHON_LIB_DIR/site-packages/ogg
cp $PKG_BUILD/build/lib*/*/*.pyc $PYTHON_LIB_DIR/site-packages/ogg
cp $PKG_BUILD/PKG-INFO $PYTHON_LIB_DIR/site-packages/pyogg-1.3-py2.6.egg-info