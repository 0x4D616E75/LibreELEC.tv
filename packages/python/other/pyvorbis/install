#!/bin/sh

. config/options

$SCRIPTS/install Python
$SCRIPTS/install pyogg
$SCRIPTS/install libvorbis

PYTHON_LIB_DIR=`ls -d $INSTALL/usr/lib/python*`

mkdir -p $PYTHON_LIB_DIR/site-packages/ogg
cp $BUILD/$1*/build/lib*/*/*.so $PYTHON_LIB_DIR/site-packages/ogg
cp $BUILD/$1*/PKG-INFO $PYTHON_LIB_DIR/site-packages/pyvorbis-1.4-py2.6.egg-info