#!/bin/sh

. config/options

$SCRIPTS/install Python
$SCRIPTS/install dbus

PYTHON_LIB_DIR=`ls -d $INSTALL/usr/lib/python*`

mkdir -p $PYTHON_LIB_DIR/site-packages
cp -PR $BUILD/$1*/_dbus_bindings/.libs/*.so $PYTHON_LIB_DIR/site-packages
cp -PR $BUILD/$1*/_dbus_glib_bindings/.libs/*.so $PYTHON_LIB_DIR/site-packages
cp -PR $BUILD/$1*/*.pyc  $PYTHON_LIB_DIR/site-packages

mkdir -p $PYTHON_LIB_DIR/site-packages/dbus
cp -PR $BUILD/$1*/dbus/*.pyc $PYTHON_LIB_DIR/site-packages/dbus

mkdir -p $PYTHON_LIB_DIR/site-packages/dbus/mainloop
cp -PR $BUILD/$1*/dbus/mainloop/*.pyc $PYTHON_LIB_DIR/site-packages/dbus/mainloop
