#!/bin/sh

. config/options

$SCRIPTS/build toolchain
$SCRIPTS/build Python
$SCRIPTS/build dbus

. config/options.python

cd $BUILD/$1*

./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix=/usr \
            --sysconfdir=/etc \
            --disable-static \
            --enable-shared \
            --enable-thread

make

$STRIP _dbus_bindings/.libs/*.so
$STRIP _dbus_glib_bindings/.libs/*.so

$MAKEINSTALL

$PYTHON -Wi -t $PYTHON_LIBDIR/compileall.py .
