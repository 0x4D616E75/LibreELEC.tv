#!/bin/sh

. config/options

$SCRIPTS/build toolchain
$SCRIPTS/build Python
$SCRIPTS/build glib
$SCRIPTS/build libffi

. config/options.python

cd $PKG_BUILD
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix=/usr \
            --sysconfdir=/etc \
            --disable-static \
            --enable-shared \
            --enable-thread

make

$MAKEINSTALL

$PYTHON -Wi -t $PYTHON_LIBDIR/compileall.py .
