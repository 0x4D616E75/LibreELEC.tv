#!/bin/sh

. config/options

$SCRIPTS/install Python
$SCRIPTS/install cairo

PYTHON_LIB_DIR=`ls -d $INSTALL/usr/lib/python*`

mkdir -p $PYTHON_LIB_DIR/site-packages/cairo
cp $BUILD/$1*/cairo/.libs/*.so $PYTHON_LIB_DIR/site-packages/cairo
cp $BUILD/$1*/cairo/*.pyc $PYTHON_LIB_DIR/site-packages/cairo
