#!/bin/sh

. config/options

$SCRIPTS/install Python
$SCRIPTS/install $CAIRO

PYTHON_LIB_DIR=`ls -d $INSTALL/usr/lib/python*`

mkdir -p $PYTHON_LIB_DIR/site-packages/cairo
cp $PKG_BUILD/cairo/.libs/*.so $PYTHON_LIB_DIR/site-packages/cairo
cp $PKG_BUILD/cairo/*.pyc $PYTHON_LIB_DIR/site-packages/cairo
