#!/bin/sh

. config/options

$SCRIPTS/build toolchain
$SCRIPTS/build elisa

. config/options.python

PLUGINS_UGLY="flickr lirc shoutcast youtube"

cd $BUILD/$1*

mkdir -p dist
for plugin in $PLUGINS_UGLY; do
  (cd elisa/plugins/$plugin; \
    $PYTHON setup.py bdist_egg  --exclude-source-files; \
  );
done
