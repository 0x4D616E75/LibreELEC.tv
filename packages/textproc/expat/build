#!/bin/sh

. config/options $1

$SCRIPTS/build toolchain

cd $PKG_BUILD
mkdir -p .build-target && cd .build-target

../configure --host=$TARGET_NAME \
             --build=$HOST_NAME \
             --prefix=/usr \
             --sysconfdir=/etc \
             --localstatedir=/var \
             --disable-static \
             --enable-shared \

make

$MAKEINSTALL
