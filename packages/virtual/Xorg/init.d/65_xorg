#!/bin/sh
#
# configure X.Org video settings
#
# runlevels: openelec, debug, configure

. /etc/sysconfig

echo "### starting Xorg ###"

#  modprobe drm
mkdir -p /var/lib/xkb/

if /usr/bin/test "${ELISA_DEBUG}" = "yes" ; then
  mount -o bind /storage /var/log
  mount -o bind /storage /var/tmp
fi

xinit $XINITRC -- $XSERVERRC