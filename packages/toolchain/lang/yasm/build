#!/bin/sh

. config/options

export CC=$HOST_CC
export CXX=$HOST_CXX
export CFLAGS="$HOST_CFLAGS"
export CXXFLAGS="$HOST_CXXFLAGS"

cd $PKG_BUILD

./configure --prefix=$ROOT/$TOOLCHAIN \
            --disable-debug \
            --disable-warnerror \
            --disable-profiling \
            --disable-gcov \
            --disable-python \
            --disable-python-bindings \
            --enable-nls \
            --disable-rpath \
            --without-dmalloc \
            --with-gnu-ld \
            --without-libiconv-prefix \
            --without-libintl-prefix

make
make install
