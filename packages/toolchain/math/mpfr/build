#!/bin/sh

. config/options

$SCRIPTS/install ccache
$SCRIPTS/install gmp

setup_toolchain host

cd $BUILD/$1*
mkdir -p objdir
cd objdir
LDFLAGS="-Wl,-rpath,$ROOT/$TOOLCHAIN/lib" \
../configure --prefix=$ROOT/$TOOLCHAIN \
             --enable-shared \
             --with-gmp-lib="$ROOT/$TOOLCHAIN/lib" \
             --with-gmp-include="$ROOT/$TOOLCHAIN/include" \

make
