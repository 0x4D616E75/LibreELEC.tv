#!/bin/sh

. config/options $1

$SCRIPTS/install ccache

setup_toolchain host

cd $PKG_BUILD
mkdir -p objdir
cd objdir
../configure --host=$HOST_NAME \
             --build=$HOST_NAME \
             --target=$TARGET_NAME \
             --prefix=$ROOT/$TOOLCHAIN \
             --enable-shared \
             --disable-static \

make
make install