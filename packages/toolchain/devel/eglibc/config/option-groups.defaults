OPTION_EGLIBC_ENVZ = y
OPTION_EGLIBC_FCVT = y
OPTION_EGLIBC_FMTMSG = y
OPTION_EGLIBC_FSTAB = y
OPTION_EGLIBC_FTRAVERSE = y

# needed by PAM
OPTION_EGLIBC_GETLOGIN = y

OPTION_EGLIBC_INET = y
OPTION_EGLIBC_LIBM = y
OPTION_EGLIBC_LOCALES = n

# needed by glib
