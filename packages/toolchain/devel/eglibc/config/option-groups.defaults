OPTION_EGLIBC_MEMUSAGE = y

#+++
OPTION_EGLIBC_NIS = y

OPTION_EGLIBC_NSSWITCH = y
OPTION_EGLIBC_RCMD = n

OPTION_EGLIBC_SPAWN = y
OPTION_EGLIBC_STREAMS = y
