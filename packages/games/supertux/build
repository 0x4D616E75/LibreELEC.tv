#!/bin/sh

. config/options

$SCRIPTS/build toolchain
$SCRIPTS/build cmake
$SCRIPTS/build physfs
$SCRIPTS/build openal-soft
$SCRIPTS/build SDL
$SCRIPTS/build SDL_image
$SCRIPTS/build SDL_mixer

cd $BUILD/$1*

mkdir -p .build

cd .build

cmake -D CMAKE_INSTALL_PREFIX:PATH=./ \
      -D CMAKE_FIND_ROOT_PATH:PATH=$SYSROOT_PREFIX \
      ..

make

$STRIP ../supertux2
