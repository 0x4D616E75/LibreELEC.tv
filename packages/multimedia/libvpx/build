#!/bin/sh

. config/options

case $TARGET_ARCH in
  i386)
    TGT=x86-linux-gcc
    ;;

  x86_64)
    TGT=x86_64-linux-gcc
    ;;

  arm)
    TGT=armv7-linux-gcc
    ;;
esac

export MAKEFLAGS=-j1
export LD="$CC"

cd $BUILD/$1*
./configure --target=$TGT \
            --cpu=$TARGET_CPU \
            --prefix=/usr \
            --enable-shared \
            --enable-runtime-cpu-detect \
            --enable-optimizations \
            --enable-extra-warnings \
            --disable-werror \
            --log \
            --enable-vp8 \
            --enable-postproc \
            --enable-multithread \
            --enable-spatial-resampling \
            --enable-pic \
            --disable-ccache \
            --disable-debug \
            --disable-gprof \
            --disable-gcov \
            --disable-install-docs \
            --enable-install-bins  \
            --enable-install-libs \
            --disable-install-srcs \
            --enable-libs \
            --disable-examples \


make

$MAKEINSTALL
