#!/bin/sh

. config/options

$SCRIPTS/build toolchain
$SCRIPTS/build liboil
$SCRIPTS/build ffmpeg
$SCRIPTS/build bzip2
$SCRIPTS/build gstreamer

#$SCRIPTS/build libSM
#$SCRIPTS/build libXv
#$SCRIPTS/build pango
#$SCRIPTS/build libogg
#$SCRIPTS/build libtheora
#$SCRIPTS/build libvorbis
#$SCRIPTS/build cdparanoia

cd $BUILD/$1*
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix=/usr \
            --sysconfdir=/etc \
            --localstatedir=/var \
            --disable-static \
            --enable-shared \
            --disable-nls \
#            --with-system-ffmpeg \

make

$STRIP `find ext gst gst-libs sys -name *.so*`

$MAKEINSTALL
