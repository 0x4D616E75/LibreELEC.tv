#!/bin/sh

. config/options

$SCRIPTS/build toolchain

cd $PKG_BUILD
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix=/usr \
            --sysconfdir=/etc \
            --enable-static \
            --disable-shared \
            --disable-gtk \
            --enable-gstreamer \
            --disable-vivified \
            --disable-gtk-doc \

make

#$STRIP src/.libs/*.so*

$MAKEINSTALL

cp -PR data/swfdec.pc $SYSROOT_PREFIX/usr/lib/pkgconfig
