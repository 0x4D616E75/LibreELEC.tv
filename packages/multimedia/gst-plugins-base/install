#!/bin/sh

. config/options

$SCRIPTS/install gstreamer
$SCRIPTS/install alsa-lib
$SCRIPTS/install libogg
$SCRIPTS/install libvorbis
$SCRIPTS/install libtheora
$SCRIPTS/install pango

mkdir -p $INSTALL/usr/lib
cp -PR `find $PKG_BUILD/gst-libs -name *.so*` $INSTALL/usr/lib
rm -rf $INSTALL/usr/lib/libgst*.so*T

mkdir -p $INSTALL/usr/lib/gstreamer-0.10
cp -PR `find $PKG_BUILD/{ext,gst,sys} -name *.so` $INSTALL/usr/lib/gstreamer-0.10
