#!/bin/sh

. config/options

$SCRIPTS/install $MESA
$SCRIPTS/install pango
$SCRIPTS/install $CAIRO
$SCRIPTS/install gstreamer
$SCRIPTS/install gst-plugins-base
$SCRIPTS/install libX11
$SCRIPTS/install glib
$SCRIPTS/install gtk+

PLUGINS_DIR=`pkg-config pigment-0.3 --define-variable=prefix=/usr --variable=pluginsdir`

mkdir -p $INSTALL/usr/lib
cp -PR $PKG_BUILD/pgm/.libs/libpigment*.so* $INSTALL/usr/lib
cp -PR $PKG_BUILD/pgm/gtk/.libs/libpigment*.so* $INSTALL/usr/lib
cp -PR $PKG_BUILD/pgm/imaging/.libs/libpigment*.so* $INSTALL/usr/lib
rm -rf $INSTALL/usr/lib/libpigment*.so*T

mkdir -p $INSTALL/$PLUGINS_DIR
cp -PR $PKG_BUILD/plugins/*/.libs/libpgm*.so $INSTALL/$PLUGINS_DIR



