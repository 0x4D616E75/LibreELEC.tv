#!/bin/sh

. config/options

$SCRIPTS/build toolchain

cd $BUILD/$1*
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix=/usr \
            --enable-static \
            --disable-shared \
            --disable-sdl \
            --without-x

make

#$STRIP libmpeg2/.libs/*.so*

$MAKEINSTALL
