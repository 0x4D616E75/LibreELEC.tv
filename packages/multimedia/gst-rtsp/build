#!/bin/sh

. config/options

$SCRIPTS/build toolchain
$SCRIPTS/build gstreamer
$SCRIPTS/build glib
$SCRIPTS/build Python

cd $BUILD/$1*
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix=/usr \
            --sysconfdir=/etc \
            --localstatedir=/var \
            --disable-static \
            --enable-shared \

make

$STRIP gst/rtsp-server/.libs/*.so*
$STRIP bindings/python/.libs/*.so

$MAKEINSTALL
