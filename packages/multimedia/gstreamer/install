#!/bin/sh

. config/options

$SCRIPTS/install glib
$SCRIPTS/install libxml2

mkdir -p $INSTALL/usr/lib
cp -PR `find $BUILD/$1*/{gst,libs} -name *.so*` $INSTALL/usr/lib
rm -rf `find $INSTALL/usr/lib -name libgst*.so*T`

mkdir -p $INSTALL/usr/lib/gstreamer-0.10
cp -PR `find $BUILD/$1*/plugins -name *.so` $INSTALL/usr/lib/gstreamer-0.10

if [ "$DEVTOOLS" = yes ]; then
  mkdir -p $INSTALL/usr/bin
  cp -PR $BUILD/$1*/tools/gst-launch $INSTALL/usr/bin
  cp -PR $BUILD/$1*/tools/.libs/* $INSTALL/usr/bin
fi
