#!/bin/sh

. config/options

$SCRIPTS/build toolchain
$SCRIPTS/build glib
$SCRIPTS/build libxml2

cd $BUILD/$1*
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix=/usr \
            --sysconfdir=/etc \
            --localstatedir=/var \
            --disable-static \
            --enable-shared \
            --with-check=no \
            --disable-docbook \
            --disable-gtk-doc \
            --disable-examples \
            --disable-tests \
            --disable-failing-tests \

make

$STRIP `find gst libs plugins -name *.so*`

$MAKEINSTALL
