#!/bin/sh

. config/options

$SCRIPTS/install sqlite
$SCRIPTS/install ffmpeg
$SCRIPTS/install libexif
$SCRIPTS/install libxml2
$SCRIPTS/install libnfo

if [ "$DEVTOOLS" = yes ]; then
  mkdir -p $INSTALL/usr/bin
  cp $PKG_BUILD/test-valhalla $INSTALL/usr/bin
fi

mkdir -p $INSTALL/usr/lib
cp -PR $PKG_BUILD/src/libvalhalla.so* $INSTALL/usr/lib
