#!/bin/sh

. config/options $1

$SCRIPTS/build toolchain
$SCRIPTS/build SDL

cd $PKG_BUILD
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix=/usr \
            --sysconfdir=/etc \
            --localstatedir=/var \
            --enable-shared \
            --disable-static \
            --disable-gui \
            --with-sdl-prefix="$SYSROOT_PREFIX/usr"

make

$MAKEINSTALL
