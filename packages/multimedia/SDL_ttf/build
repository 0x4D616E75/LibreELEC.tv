#!/bin/sh

. config/options

$SCRIPTS/build toolchain
$SCRIPTS/build SDL
$SCRIPTS/build libICE
$SCRIPTS/build libX11
$SCRIPTS/build freetype
$SCRIPTS/build Mesa

cd $PKG_BUILD
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix=/usr \
            --sysconfdir=/etc \
            --localstatedir=/var \
            --enable-shared \
            --disable-static \

make

$MAKEINSTALL
