#!/bin/sh

. config/options

$SCRIPTS/build toolchain

cd $BUILD/$1*
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix=/usr \
            --sysconfdir=/etc \
            --disable-static \
            --enable-shared \
            --disable-sdl \
            --disable-gtk \
            --disable-xv

$HOST_CC -o libdv/host-gasmoff libdv/gasmoff.c

make GASMOFF=host-gasmoff

$STRIP src/.libs/*.so*

$MAKEINSTALL
