#!/bin/sh

. config/options

$SCRIPTS/build toolchain
$SCRIPTS/build libX11
$SCRIPTS/build xine-lib

cd $PKG_BUILD

./configure --prefix=/usr \
            --disable-static \
            --enable-shared \
            --disable-debug \
            --cross-compile \
            --disable-doc \
            --enable-logcolor \
            --enable-mplayer \
            --enable-xine \
            --disable-vlc \
            --disable-gstreamer \
            --disable-binding-python \
            --enable-x11

make -C src
make test

$MAKEINSTALL -C src

cp -f libplayer.pc $SYSROOT_PREFIX/usr/lib/pkgconfig/
