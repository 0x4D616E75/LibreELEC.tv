#!/bin/sh

. config/options

$SCRIPTS/build toolchain
$SCRIPTS/build libX11
$SCRIPTS/build libXext
$SCRIPTS/build libXfixes
$SCRIPTS/build $LIBDRM
$SCRIPTS/build $MESA

cd $PKG_BUILD
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix=/usr \
            --enable-shared \
            --disable-static \
            --enable-glx \
            --disable-dummy-driver \
	    --enable-i965-driver \
            --with-drivers-path="/usr/lib/va" \

make

$MAKEINSTALL
