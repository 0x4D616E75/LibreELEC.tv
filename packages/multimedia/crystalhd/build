#!/bin/sh

. config/options $1

$SCRIPTS/build toolchain
$SCRIPTS/build linux

cd $PKG_BUILD/driver/linux
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix=/usr \
            --with-kernel-path=$(kernel_path) \

make V=1

cd $PKG_BUILD/linux_lib/libcrystalhd

make BCGCC=$TARGET_CXX

$MAKEINSTALL
