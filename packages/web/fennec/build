#!/bin/sh

. config/options

$SCRIPTS/build toolchain
$SCRIPTS/build xulrunner

cd $BUILD/fennec*

mkdir -p .objdir-$1
cd .objdir-$1

../configure --host=$TARGET_NAME \
             --build=$HOST_NAME \
             --prefix=/usr \
             --sysconfdir=/etc \
             --disable-static \
             --enable-application=mobile \
             --disable-debug \
             --enable-mobile-optimize \
             --disable-tests \
             --disable-libnotify \
             --with-system-libxul \
             --with-libxul-sdk=$SYSROOT_PREFIX/usr/lib/xulrunner-devel

make

make package
