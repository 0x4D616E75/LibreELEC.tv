#!/bin/sh

. config/options

$SCRIPTS/build toolchain
$SCRIPTS/build libpthread-stubs
$SCRIPTS/build udev
$SCRIPTS/build linux

cd $PKG_BUILD
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix=/usr \
            --sysconfdir=/etc \
            --disable-static \
            --enable-shared \
            --enable-udev \
            --enable-largefile

$MAKE
$MAKE -C linux-core LINUXDIR=$(kernel_path) DRM_MODULES=openchrome

$MAKEINSTALL
