#!/bin/sh

. config/options $1

$SCRIPTS/build toolchain
$SCRIPTS/build zlib
$SCRIPTS/build libusb-compat

cd $PKG_BUILD
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix=/usr \

make

mkdir -p $SYSROOT_PREFIX/usr/lib/pkgconfig
cp -f usbutils.pc $SYSROOT_PREFIX/usr/lib/pkgconfig
