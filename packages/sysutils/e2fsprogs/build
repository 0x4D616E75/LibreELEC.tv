#!/bin/sh

. config/options

$SCRIPTS/build toolchain

cd $PKG_BUILD
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix=/usr \
            --enable-shared \
            --disable-static \
            --disable-libuuid \
            --disable-libblkid \
            --disable-debugfs \
            --disable-imager \
            --disable-resizer \
            --disable-uuidd \

make -C lib/et
make -C lib/ext2fs

$MAKEINSTALL -C lib/et
$MAKEINSTALL -C lib/ext2fs
