#!/bin/sh

. config/options

$SCRIPTS/build toolchain

PKG_DIR=`find $PACKAGES -type d -name $1`

[ -f $CONFIG/projects/$PROJECT/$1/$1.conf ] && \
  BUSYBOX_CFG_FILE=$CONFIG/projects/$PROJECT/$1/$1.conf || \
  BUSYBOX_CFG_FILE=$CONFIG/projects/generic/$1/$1.conf

cd $BUILD/$1*
# Build Busybox for initramfs
  make distclean
  cp $ROOT/$PKG_DIR/config/$1-initramfs.conf .config
  make oldconfig

  ARCH=$TARGET_ARCH make install

# Build Busybox for system
  make distclean
  cp $BUSYBOX_CFG_FILE .config
  make oldconfig

  ARCH=$TARGET_ARCH make install
