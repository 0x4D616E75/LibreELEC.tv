# parse command line arguments
  for arg in $(cat /proc/cmdline); do
    case $arg in
      textmode)
        TEXTMODE=yes
        ;;
      debugging)
        DEBUG=yes
        ;;
      fastboot)
        FASTBOOT=yes
        ;;
    esac
  done

# setting some Variables
  [ "$FASTBOOT" = "yes" ] && \
    IONICE="ionice -c 1 -n 0" && \
    NICE_20="nice -n 20"

# functions
  progress() {
    if test "$DEBUG" = yes; then
      echo "### $1 ###"
    else
      echo -n "***"
    fi
  }

# read config files
  for config in `ls /etc/profile.d/`; do
    . /etc/profile.d/$config
  done
