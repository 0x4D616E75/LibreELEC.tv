# parse command line arguments
  for arg in $(cat /proc/cmdline); do
    case $arg in
      textmode)
        TEXTMODE=yes
        ;;
      debugging)
        DEBUG=yes
        ;;
    esac
  done

# functions
  progress() {
    if test "$DEBUG" = yes; then
      echo "### $1 ###"
    fi
  }

# read config files
  for config in `ls /etc/conf.d/`; do
    . /etc/conf.d/$config
  done
