# start debug shell
#
# runlevels: openelec, debug, text

  TTY="3"

if [ "$DEBUG"="yes" ]; then

  echo "###########################################"
  echo "## it seems we are running in Debug mode ##"
  echo "## starting debugging shell on console $TTY ##"
  echo "## ...... switch with ctrl-alt-f$TTY ...... ##"
  echo "###########################################"

  exec /bin/sh </dev/tty$TTY >/dev/tty$TTY 2>&1 &

fi
