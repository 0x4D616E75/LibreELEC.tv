#!/bin/sh
#
# set time
#
# runlevels: openelec, text, debug

. /etc/sysconfig

progress "saving Starttime"

ADJTIME=/etc/adjtime

if [ -x /sbin/hwclock ]; then
    [ -r ${ADJTIME} ] && ! ( grep -q "LOCAL" ${ADJTIME} || grep -q "UTC" ${ADJTIME} ) && echo "UTC" >>${ADJTIME}
    /sbin/hwclock --hctosys -f /dev/rtc &
fi
