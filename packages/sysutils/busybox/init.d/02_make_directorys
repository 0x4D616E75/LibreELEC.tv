#
# make variable directory structure
#
# runlevels: openelec, text

progress "make variable directory structure"
  $IONICE mkdir -p /var/log \
                   /var/lock \
                   /var/media \
                   /var/run \
                   /var/tmp \
                   /var/run/sepermit

  $IONICE chmod 1777 /var/run /var/tmp

