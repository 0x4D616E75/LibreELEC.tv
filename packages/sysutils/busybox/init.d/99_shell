# start text mode shell
#
# runlevels: text

TTY="1"

echo "###########################################"
echo "## it seems we are running in Text mode. ##"
echo "## .... starting shell on console $TTY .... ##"
echo "## ...... switch with ctrl-alt-f$TTY ...... ##"
echo "###########################################"

while true; do
  exec /bin/sh </dev/tty$TTY >/dev/tty$TTY 2>&1
done
