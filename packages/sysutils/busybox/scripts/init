#!/bin/sh -l

clear

# starting init scripts for wanted runlevel
  progress "Starting Init Scripts"
    RET=0

    for script in /etc/init.d/*; do
      if grep -q -e "^# runlevels:.*$RUNLEVEL" $script; then
        . $script
        S_RET=$?
        test $S_RET -ge $RET && RET=$S_RET
      fi
    done
