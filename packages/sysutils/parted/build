#!/bin/sh

. config/options

$SCRIPTS/build toolchain
$SCRIPTS/build util-linux-ng

cd $PKG_BUILD
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix=/usr \
            --sysconfdir=/etc \
            --datadir=/usr/share \
            --localstatedir=/var \
            --disable-static \
            --enable-shared \
            --disable-device-mapper \
            --without-readline \

make

$MAKEINSTALL
