#!/bin/sh

. config/options

$SCRIPTS/build toolchain

cd $PKG_BUILD
gt_cv_func_gnugettext1_libintl=no \
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix=/usr \
            --disable-shared \
            --enable-static \
            --disable-tls \
            --without-ncurses

make -C fdisk sfdisk
make -C shlibs/blkid
make -C shlibs/uuid

$MAKEINSTALL -C shlibs/blkid
$MAKEINSTALL -C shlibs/uuid
