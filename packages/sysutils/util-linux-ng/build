#!/bin/sh

. config/options

$SCRIPTS/build toolchain

cd $PKG_BUILD
gt_cv_func_gnugettext1_libintl=no \
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix=/usr \
            --enable-shared \
            --disable-static \
            --disable-tls \
            --without-ncurses

make -C fdisk sfdisk
make -C shlibs
make -C misc-utils blkid

$MAKEINSTALL -C shlibs
