#cp -PR extras/volume_id/lib/libvolume_id.h $SYSROOT_PREFIX/usr/include

#mkdir -p $SYSROOT_PREFIX/usr/lib
#cp -PR extras/volume_id/lib/libvolume_id.so* $SYSROOT_PREFIX/usr/lib

#mkdir -p $SYSROOT_PREFIX/usr/lib/pkgconfig
