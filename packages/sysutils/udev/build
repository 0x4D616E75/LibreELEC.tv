#!/bin/sh

. config/options

$SCRIPTS/build toolchain

cd $PKG_BUILD
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix=/usr \
            --sysconfdir=/etc \
            --sbindir=/sbin \
            --libexecdir=/lib/udev \
            --localstatedir=/var \
            --disable-silent-rules \
            --disable-static \
            --enable-shared \
            --disable-gtk-doc \
            --disable-debug \
            --enable-logging \
            --disable-extras \
            --disable-introspection \
            --with-gnu-ld \

make

$STRIP udev/udevd
$STRIP udev/udevadm

make DESTDIR=$SYSROOT_PREFIX install
