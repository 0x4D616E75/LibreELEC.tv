#!/bin/sh

. config/options

$SCRIPTS/build toolchain

#UTILS="firmware dvb_device_name ata_id scsi_id edd_id path_id usb_id volume_id"
#for i in $UTILS; do
#  EXTRAS="$EXTRAS extras/$i"
#done

cd $BUILD/$1*
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix=/usr \
            --sysconfdir=/etc \
            --localstatedir=/var \
            --disable-static \
            --enable-shared \


make

$STRIP udev/udevd
$STRIP udev/udevadm
$STRIP extras/volume_id/lib/.libs/*.so*
$STRIP udev/lib/.libs/*.so*

make DESTDIR=$SYSROOT_PREFIX install

