#!/bin/sh
#
# start udev daemon
#
# runlevels: openelec, text, debug

(
  . /etc/sysconfig

  progress "starting Udev"

  export UDEV_MAX_CHILDS=2
  export UDEV_MAX_CHILDS_RUNNING=2

  echo > /proc/sys/kernel/hotplug

  udevd --daemon
  udevadm trigger
  udevadm settle --timeout=60
  udevadm monitor 2>&1 >/var/log/udev
)&

exit 0
