# start the LIRC daemon
#
# runlevels: openelec, textmode

LIRC_DRIVER="default"
LIRC_DEVICE="/dev/lirc0"
LIRC_OUTPUT="/dev/lircd"

(
  progress "Starting LIRC daemon"


  $IONICE mkdir -p /var/run/lirc

    lircd --driver=$LIRC_DRIVER \
          --device=$LIRC_DEVICE \
          --output=$LIRC_OUTPUT
)&
