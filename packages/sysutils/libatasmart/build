#!/bin/sh

. config/options

$SCRIPTS/build toolchain
$SCRIPTS/build udev

cd $PKG_BUILD
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix=/usr \
            --sysconfdir=/etc \
            --datadir=/usr/share \
            --localstatedir=/var \
            --disable-static \
            --enable-shared \

make CC="$HOST_CC" CFLAGS="$HOST_CFLAGS" LDFLAGS="$HOST_LDFLAGS" strpool
make

$MAKEINSTALL
