#!/bin/sh

. config/options $1

$SCRIPTS/build toolchain
$SCRIPTS/build fuse

cd $PKG_BUILD
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix=/usr \
            --enable-shared \
            --disable-static \
            --disable-dependency-tracking \
            --with-fuse=external \
            --disable-library \
            --enable-posix-acls \
            --disable-mtab \

make
