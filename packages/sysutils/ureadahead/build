#!/bin/sh

. config/options

$SCRIPTS/build toolchain
$SCRIPTS/build libnih
$SCRIPTS/build e2fsprogs

cd $PKG_BUILD
EXT2FS_LIBS="-lext2fs -lcom_err" \
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix=/usr \
            --sysconfdir=/etc \
            --datadir=/usr/share \
            --localstatedir=/var \
            --disable-static \
            --enable-shared \

make
