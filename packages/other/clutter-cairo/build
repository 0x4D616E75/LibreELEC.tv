#!/bin/sh

. config/options

$SCRIPTS/build toolchain
$SCRIPTS/build clutter
$SCRIPTS/build cairo

cd $BUILD/$1*
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix=/usr \
            --sysconfdir=/etc \
            --disable-static \
            --enable-shared \
#            --disable-gtk-doc \
#            --disable-examples \
#            --with-imagebackend=gdk-pixbuf \
#            --with-flavour=glx \
#            --with-x

make

$STRIP .libs/*.so*

$MAKEINSTALL
