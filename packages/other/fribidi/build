#!/bin/sh

. config/options

$SCRIPTS/build toolchain

PKG_DIR=`find $PACKAGES -type d -name $1`

cd $PKG_BUILD
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix=/usr \
            --disable-debug \
            --enable-malloc \
            --with-glib=no \
            --disable-shared

make

$MAKEINSTALL
cp -f $ROOT/$PKG_DIR/scripts/$1-config $ROOT/$TOOLCHAIN/bin/$1-config
