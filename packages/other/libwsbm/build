#!/bin/sh

. config/options

$SCRIPTS/build toolchain
$SCRIPTS/build $LIBDRM

cd $BUILD/$1*
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix=/usr \
            --sysconfdir=/etc \
            --disable-static \
            --enable-shared \

make

$STRIP src/.libs/*.so*

$MAKEINSTALL
