#!/bin/sh

. config/options

$SCRIPTS/build toolchain

cd $PKG_BUILD
ac_cv_func_setpgrp_void=no \
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix=/usr \
            --sysconfdir=/etc \
            --disable-static \
            --enable-shared \
            --disable-lynx \

make

$STRIP $1/.libs/*.so*

$MAKEINSTALL
