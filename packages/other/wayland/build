#!/bin/sh

. config/options

$SCRIPTS/build toolchain
$SCRIPTS/build udev
$SCRIPTS/build eagle
$SCRIPTS/build libffi
$SCRIPTS/build libpng
$SCRIPTS/build $CAIRO
$SCRIPTS/build gtk+

cd $PKG_BUILD
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix=/usr \
            --sysconfdir=/etc \
            --disable-static \
            --enable-shared \

make

$MAKEINSTALL
