#!/bin/sh

. config/options $1

$SCRIPTS/build toolchain
$SCRIPTS/build linux

cd  $BUILD/$1*

make PREFIX=/usr \
     CC=$CC \
     AR=$AR \
     RANLIB=$RANLIB \
     CFLAGS="$CFLAGS -I." \
     BUILD_STRIPPING='y'

make PREFIX=$SYSROOT_PREFIX/usr install
make PREFIX=$SYSROOT_PREFIX/usr install-hdr
