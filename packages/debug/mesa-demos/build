#!/bin/sh

. config/options $1

$SCRIPTS/build toolchain
$SCRIPTS/build libX11
$SCRIPTS/build Mesa
$SCRIPTS/build glew

cd $PKG_BUILD
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix=/usr \
            --sysconfdir=/etc \
            --localstatedir=/var \
            --disable-static \
            --enable-shared \

make
