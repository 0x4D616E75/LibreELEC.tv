#!/bin/sh

. config/options

$SCRIPTS/build toolchain
$SCRIPTS/build ncurses
$SCRIPTS/build readline

cd $PKG_BUILD

ac_cv_file__dev_ptmx=yes \
ac_cv_func_setpgrp_void=no \
ac_cv_rl_version=6.0 \
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix=/usr \
            --with-readline=$SYSROOT_PREFIX/usr \

make

