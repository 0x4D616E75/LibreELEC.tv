#!/bin/sh

. /etc/sysconfig

export DISPLAY=":0.0"

/usr/share/xbmc/xbmc.bin \
  --standalone \
  -fs \
  --lircdev $LIRC_OUTPUT \
  $@

RET=$?
echo "Exited with code $RET"

[ "$RET" == 0 ] && initctl emit shutdown REBOOT=no
[ "$RET" == 64 ] && initctl emit shutdown REBOOT=no
[ "$RET" == 66 ] && initctl emit shutdown REBOOT=yes
