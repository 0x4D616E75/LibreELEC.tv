#!/bin/sh

. config/options

$SCRIPTS/build toolchain
$SCRIPTS/build gettext

cd $BUILD/$1*
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix=/usr \
            --sysconfdir=/etc \
            --disable-static \
            --enable-shared \
            --disable-nls \
            --enable-extra-encodings

$MAKE

$STRIP lib/.libs/*.so*

$MAKEINSTALL