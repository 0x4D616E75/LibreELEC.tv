#!/bin/sh

. config/options

$SCRIPTS/build toolchain
$SCRIPTS/build gettext-dummy

cd $PKG_BUILD
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix=/usr \
            --sysconfdir=/etc \
            --disable-static \
            --enable-shared \
            --disable-nls \
            --enable-extra-encodings

$MAKE

$MAKEINSTALL
