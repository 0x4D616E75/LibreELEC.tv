#!/bin/sh

. config/options

$SCRIPTS/build toolchain
$SCRIPTS/build libogg

cd $PKG_BUILD
OGG_CFLAGS="" \
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix=/usr \
            --sysconfdir=/etc \
            --localstatedir=/var \
            --enable-static \
            --disable-shared \
            --with-ogg=$SYSROOT_PREFIX/usr \
            --enable-fixed-point \
            --disable-oggtest \
            --disable-float-api \
            --disable-vbr \

make

#$STRIP libspeex/.libs/*.so*

$MAKEINSTALL