#!/bin/sh

. config/options

$SCRIPTS/build toolchain

cd $BUILD/$1*
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix=/usr \
            --enable-static \
            --disable-shared \
            --without-xmms \
            --without-drm \
            --without-mpeg4ip \

make

#$STRIP libfaad/.libs/*.so*

$MAKEINSTALL
