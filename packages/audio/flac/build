#!/bin/sh

. config/options

$SCRIPTS/build toolchain
$SCRIPTS/build libogg

cd $BUILD/$1*
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix=/usr \
            --enable-static \
            --disable-shared \
            --disable-thorough-tests \
            --disable-cpplibs \
            --disable-xmms-plugin \
            --with-ogg=$SYSROOT_PREFIX/usr

make

#$STRIP src/libFLAC/.libs/*.so*

$MAKEINSTALL
