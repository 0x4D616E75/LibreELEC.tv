#!/bin/sh

. config/options $1

$SCRIPTS/build toolchain
$SCRIPTS/build libogg

cd $PKG_BUILD
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix=/usr \
            --disable-static \
            --enable-shared \
            --disable-rpath \
            --with-gnu-ld \
            --disable-altivec \
            --disable-doxygen-docs \
            --disable-thorough-tests \
            --disable-cpplibs \
            --disable-xmms-plugin \
            --disable-oggtest \
            --with-ogg=$SYSROOT_PREFIX/usr

make

$MAKEINSTALL
