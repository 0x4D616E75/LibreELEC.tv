#!/bin/sh

. config/options

$SCRIPTS/build toolchain
$SCRIPTS/build libogg

cd $PKG_BUILD
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix=/usr \
            --disable-static \
            --enable-shared \
            --disable-thorough-tests \
            --disable-cpplibs \
            --disable-xmms-plugin \
            --with-ogg=$SYSROOT_PREFIX/usr

make

$MAKEINSTALL
