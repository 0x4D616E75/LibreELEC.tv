#!/bin/sh

. config/options

$SCRIPTS/build toolchain
$SCRIPTS/build alsa-lib
#$SCRIPTS/build flac

cd $BUILD/$1*
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix=/usr \
            --enable-static \
            --disable-shared

make -C src
cp -PR sndfile.pc $SYSROOT_PREFIX/usr/lib/pkgconfig

#$STRIP src/.libs/*.so*

$MAKEINSTALL -C src
