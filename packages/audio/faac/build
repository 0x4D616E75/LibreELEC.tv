#!/bin/sh

. config/options

$SCRIPTS/build toolchain

cd $BUILD/$1*
./bootstrap
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix=/usr \
            --enable-static \
            --disable-shared \
            --with-mp4v2

make

#$STRIP libfaac/.libs/*.so*

$MAKEINSTALL
