#!/bin/sh

. config/options

$SCRIPTS/build toolchain
$SCRIPTS/build libogg

cd $BUILD/$1*
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix=/usr \
            --sysconfdir=/etc \
            --disable-static \
            --enable-shared \
            --with-ogg=$SYSROOT_PREFIX/usr

$MAKE

$STRIP lib/.libs/libvorbis*.so*

$MAKEINSTALL
