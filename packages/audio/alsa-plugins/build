#!/bin/sh

. config/options $1

if [ "$PULSEAUDIO_SUPPORT" = yes ]; then
  ALSAPLUGINS_PULSEAUDIO="--enable-pulseaudio"
else
  ALSAPLUGINS_PULSEAUDIO="--disable-pulseaudio"
fi

cd $PKG_BUILD

./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix=/usr \
            --sysconfdir=/etc \
            --with-plugindir=/usr/lib/alsa \
            --localstatedir=/var \
            --disable-static \
            --enable-shared \
            --disable-jack \
            --disable-samplerate \
            --disable-avcodec \
            $ALSAPLUGINS_PULSEAUDIO \
            --with-speex=lib \

$MAKE
