# determine architecture's family
case $TARGET_ARCH in
  arm)
    TARGET_SUBARCH=arm
    TARGET_ABI=eabi
    ;;

  i386)
    TARGET_SUBARCH=i686
    ;;

  x86_64)
    TARGET_SUBARCH=x86_64
    ;;
esac

# determines TARGET_CPU, if not forced by user
if [ -z "$TARGET_CPU" ]; then
  case $TARGET_ARCH in
    arm)
      TARGET_CPU=cortex-a8
      ;;

    i386)
      TARGET_CPU=i686
      ;;

    x86_64)
      TARGET_CPU=core2
      ;;
  esac
fi
